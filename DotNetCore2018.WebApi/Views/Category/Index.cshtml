@model IEnumerable<CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}

<div>
    <a asp-action="Create">Create new</a>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td><a asp-page="/Category/Edit" asp-route-id="@category.Id">Edit</a></td>
            </tr>
        }
    </table>
</div>