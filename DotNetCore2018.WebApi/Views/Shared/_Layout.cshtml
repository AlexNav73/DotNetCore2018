@{
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@section header {
    @if (IsSectionDefined("header")) {
        RenderSection("header");
    } else {
        @Html.Partial("_Header");
    }
}

@section footer {
    @if (IsSectionDefined("footer")) {
        RenderSection("footer");
    } else {
        @Html.Partial("_Footer");
    }
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
</div>