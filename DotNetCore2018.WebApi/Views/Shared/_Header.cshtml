<header>
    @await Component.InvokeAsync(nameof(Navigation))
    <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
            <a asp-action="index" asp-controller="home" class="p-2 text-white">Home</a>
            <div>
                <a asp-action="Login" asp-controller="Authentication" class="btn btn-light">Sign in</a>
                <a asp-action="Register" asp-controller="Authentication" class="btn btn-light">Sign up</a>
                <button class="navbar-toggler collapsed" 
                        type="button" 
                        data-toggle="collapse" 
                        data-target="#navbarHeader" 
                        aria-controls="navbarHeader" 
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </div>
</header>